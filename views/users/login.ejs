<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-md-8 col-10">
      <h3>Login on WanderLust</h3>
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div>
          <label class="form-label mt-3" for="username">Username</label>
          <input
            class="form-control"
            name="username"
            type="text"
            id="username"
            required
          />
          <div class="valid-feedback">Username looks Good!</div>
          <div class="invalid-feedback">Please enter a valid Username</div>
        </div>

        <div>
          <label class="form-label mt-3" for="password">Password</label>
          <input
            class="form-control"
            name="password"
            type="password"
            id="password"
            required
            min="4"
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter a valid password</div>
        </div>

        <button class="btn btn-success mt-3">Login</button>
      </form>
      <p class="mt-3">Don't have an account? <a href="/signup">SignUp</a></p>
    </div>
  </div>
</body>
