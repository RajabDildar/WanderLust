<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-md-8 col-10">
      <h3>SignUp on WanderLust</h3>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div>
          <label class="form-label mt-3" for="username">Username</label>
          <input
            class="form-control"
            name="username"
            type="text"
            id="username"
            required
          />
          <div class="valid-feedback">Username looks Good!</div>
          <div class="invalid-feedback">Please enter a valid Username</div>
        </div>

        <div>
          <label class="form-label mt-3" for="email">Email</label>
          <input
            class="form-control"
            name="email"
            type="email"
            id="email"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">
            Please enter a valid Email Id (e.g, abc@example.com)
          </div>
        </div>

        <div>
          <label class="form-label mt-3" for="password">Password</label>
          <input
            class="form-control"
            name="password"
            type="password"
            id="password"
            required
            min="4"
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter a valid password</div>
        </div>

        <button class="btn btn-success mt-3">SignUp</button>
      </form>
      <p class="mt-3">Already have an account? <a href="/login">Login</a></p>
    </div>
  </div>
</body>
