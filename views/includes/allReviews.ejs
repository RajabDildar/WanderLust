<% if (listing.reviews && listing.reviews.length) { %>
<hr />
<h1 class="all-reviews">All Reviews</h1>
<% } %>

<div class="row">
  <% for(review of listing.reviews) { %>
  <div class="card col mb-3">
    <div class="card-body">
      <div class="card-title">@<%= review.createdby.username %></div>
      <p
        class="starability-result card-text"
        data-rating="<%= review.rating %>"
      ></p>
      <div class="card-text"><%= review.comment %></div>
      <% if (currUser && review.createdby.equals(currUser._id)) { %>
      <form
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        method="post"
      >
        <button class="mt-3 mb-3 btn btn-sm btn-dark">Delete</button>
      </form>
      <% } %>
    </div>
  </div>
  <% } %>
</div>
