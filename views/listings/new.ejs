<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8">
      <h3 class="mt-3">Create new Listing</h3>
      <form method="post" action="/listings">
        <label class="form-label mt-3" for="title">Title:</label>
        <input
          class="form-control"
          name="listing[title]"
          type="text"
          id="title"
        />
        <label class="form-label mt-3" for="description"
          >Add some description:</label
        >
        <textarea
          class="form-control"
          name="listing[description]"
          id="description"
        ></textarea>
        <label class="form-label mt-3" for="image">Add image link: </label>
        <input
          class="form-control"
          name="listing[image]"
          type="text"
          id="image"
        />
        <div class="row">
          <div class="col">
            <label class="form-label mt-3" for="price">Price</label>
            <input
              class="form-control"
              name="listing[price]"
              type="text"
              id="price"
            />
          </div>
          <div class="col">
            <label class="form-label mt-3" for="location">Location:</label>
            <input
              class="form-control"
              name="listing[location]"
              type="text"
              id="location"
            />
          </div>
        </div>
        <label class="form-label mt-3" for="country">Country:</label>
        <input
          class="form-control"
          name="listing[country]"
          type="text"
          id="country"
        />
        <button class="btn btn-dark add-btn mt-3 mb-4">Done</button>
      </form>
    </div>
  </div>
</body>
