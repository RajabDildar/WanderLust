<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-md-8 col-10">
      <h3 class="mt-3">Create new Listing</h3>
      <form
        method="post"
        action="/listings"
        class="needs-validation"
        novalidate
      >
        <div>
          <label class="form-label mt-3" for="title">Title:</label>
          <input
            class="form-control"
            name="listing[title]"
            type="text"
            id="title"
            required
          />
          <div class="valid-feedback">Title looks Good!</div>
          <div class="invalid-feedback">Please enter a valid Title</div>
        </div>

        <div>
          <label class="form-label mt-3" for="description"
            >Add some description:</label
          >
          <textarea
            class="form-control"
            name="listing[description]"
            id="description"
            rows="10"
            required
          ></textarea>
          <div class="valid-feedback">Description looks Good!</div>
          <div class="invalid-feedback">Please enter some description</div>
        </div>

        <div>
          <label class="form-label mt-3" for="image">Add image link: </label>
          <input
            class="form-control"
            name="listing[image]"
            type="text"
            id="image"
          />
        </div>

        <div class="row">
          <div class="col">
            <label class="form-label mt-3" for="price">Price</label>
            <input
              class="form-control"
              name="listing[price]"
              type="number"
              id="price"
              required
              min="0"
            />
            <div class="valid-feedback">Price looks Good!</div>
            <div class="invalid-feedback">Please enter some valid price</div>
          </div>
          <div class="col">
            <label class="form-label mt-3" for="location">Location:</label>
            <input
              class="form-control"
              name="listing[location]"
              type="text"
              id="location"
              required
            />
            <div class="valid-feedback">Location looks Good!</div>
            <div class="invalid-feedback">Please enter a valid location</div>
          </div>
        </div>

        <div>
          <label class="form-label mt-3" for="country">Country:</label>
          <input
            class="form-control"
            name="listing[country]"
            type="text"
            id="country"
            required
          />
          <div class="valid-feedback">Country Name looks Good!</div>
          <div class="invalid-feedback">Please enter a valid Country Name</div>
        </div>

        <button type="submit" class="btn btn-dark add-btn mt-3 mb-4">
          Add
        </button>
      </form>
    </div>
  </div>
</body>
