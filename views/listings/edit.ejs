<% layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-md-8 col-10">
      <h1 class="mt-3 mb-3">Edit listing:</h1>
      <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-4">
          <label class="form-label" for="title">Title:</label>
          <input
            class="form-control"
            name="listing[title]"
            type="text"
            id="title"
            value="<%= listing.title %>"
          />
        </div>
        <div class="mb-4">
          <label class="form-label" for="description"
            >Add some description:</label
          >
          <textarea
            class="form-control"
            name="listing[description]"
            id="description"
            rows="10"
            cols="50"
          >
<%= listing.description %></textarea
          >
        </div>
        <div class="mb-4">
          <label class="form-label" for="image">Add image link: </label>
          <input
            class="form-control"
            name="listing[image]"
            type="text"
            id="image"
            value="<%= listing.image %>"
          />
        </div>
        <div class="row">
          <div class="mb-4 col">
            <label class="form-label" for="price">Price</label>
            <input
              class="form-control"
              name="listing[price]"
              type="text"
              id="price"
              value="<%= listing.price %>"
            />
          </div>
          <div class="mb-4 col">
            <label class="form-label" for="location">Location:</label>
            <input
              class="form-control"
              name="listing[location]"
              type="text"
              id="location"
              value="<%= listing.location %>"
            />
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label" for="country">Country:</label>
          <input
            class="form-control"
            name="listing[country]"
            type="text"
            id="country"
            value="<%= listing.country %>"
          />
        </div>
        <button class="btn edit-btn btn-dark mb-4">Edit</button>
      </form>
    </div>
  </div>
</body>
